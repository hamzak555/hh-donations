{
  "buildCommand": "cd hh-donations-app && npm run build",
  "outputDirectory": "hh-donations-app/build",
  "installCommand": "cd hh-donations-app && npm install && cd ../hh-donations-backend && npm install",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/hh-donations-app/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "production-jwt-secret-change-this",
    "ADMIN_EMAIL": "admin@hh-donations.com",
    "ADMIN_PASSWORD": "admin123"
  }
}